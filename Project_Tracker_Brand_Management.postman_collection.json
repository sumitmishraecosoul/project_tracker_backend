  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract JWT token from login response",
          "if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data.token) {",
          "    pm.collectionVariables.set('jwt_token', pm.response.json().data.token);",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract brand_id from brand creation response",
          "if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data.id) {",
          "    pm.collectionVariables.set('brand_id', pm.response.json().data.id);",
          "}",
          "",
          "// Auto-extract user_id from user creation response",
          "if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data.id) {",
          "    pm.collectionVariables.set('user_id', pm.response.json().data.id);",
          "}"
        ]
      }
